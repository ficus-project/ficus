{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "airbnb-typescript"
  ],
  "overrides": [
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./packages/ficus-api/tsconfig.json", "./packages/ficus-front/tsconfig.json", "./packages/ficus-models/tsconfig.json"]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-empty-interface": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "class-methods-use-this": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/tests/**.ts", "**/*test.ts", "**/*tests.ts", "**/*.spec.ts"]}],
    "semi": "off",
    "@typescript-eslint/semi": "error"
  }
}
